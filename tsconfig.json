// TypeScript config file that matches all source files in the project. This file is read by
// IDEs and TSLint. For IDEs it ensures that `experimentalDecorator` warnings are not showing up.
// optionalChainNotNullable: https://github.com/angular/angular/issues/46918
{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "es2020",
    "importHelpers": true,
    "esModuleInterop": true,
    "rootDir": ".",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "target": "ES2022",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "jasmine"
    ]
  },
  "angularCompilerOptions": {
    "strictStandalone": true,
    "typeCheckHostBindings": true,
    "extendedDiagnostics": {
      "checks": {
        "optionalChainNotNullable": "suppress"
      }
    }
  }
}
